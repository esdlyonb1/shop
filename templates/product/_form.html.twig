{{ form_start(form) }}
    {{ form_row(form.name) }}
    {{ form_row(form.description) }}
    {{ form_row(form.price) }}


<ul class="images"
    data-index="{{ form.images|length > 0 ? form.images|last.vars.name + 1 : 0 }}"
    data-prototype="{{ form_widget(form.images.vars.prototype)|e('html_attr') }}"
></ul>

<button type="button" class="add_item_link btn btn-primary" data-collection-holder-class="images">Add an image</button>


<button class="btn">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}
